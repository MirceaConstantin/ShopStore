include ../layouts/layout.pug

block index
  div.container
    div(id="indexCarousel" class="carousel slide mb-1 carousel-fade" data-ride="carousel")
      ul(class="carousel-indicators")
        li(data-target="#indexCarousel" data-slide-to="0")
        li(data-target="#indexCarousel" data-slide-to="1")
        li(data-target="#indexCarousel" data-slide-to="2")
      div(class="carousel-inner rounded")
        div(class="carousel-item active")
          img(src="https://mdbootstrap.com/img/Photos/Slides/img%20(130).jpg" alt="Los Angeles" width="550" height="250")
          div(class="carousel-caption")
            h5 1
        div(class="carousel-item")
          img(src="https://mdbootstrap.com/img/Photos/Slides/img%20(130).jpg" alt="Los Angeles" width="550" height="250")
          div(class="carousel-caption")
            h5 2
      a(class="carousel-control-prev" href="#indexCarousel" data-slide="prev")
        span(class="carousel-control-prev-icon")
      a(class="carousel-control-next" href="#indexCarousel" data-slide="next")
        span(class="carousel-control-next-icon")

    div(class="row text-center")
      each product in products
        div(class="col-lg-3 col-md-6 mb-4")
          div(class="card h-100")
            img(class="card-img-top" src= product.imagePoster alt= product.title)
            div(class="card-body p-1")
              h5(class="card-title mb-0") #{product.title}
              p(class="card-text") #{product.price}$
            div(class="card-footer bg-dark")
              a(href=`/${product.title}` class="mw-5 btn btn-info mr-1") Details
              a(href="#" class="mw-5 btn btn-success") Add to cart
