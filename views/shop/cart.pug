include ../layouts/layout.pug

block cart
  //- Ajax
  link(rel="stylesheet", href="/stylesheets/cart.css")
  .container#container
    div(class="cartContainer")
      section(id="cart")
        article(class="product")
          header
            a(class="remove")
              img(src="http://www.astudio.si/preview/blockedwp/wp-content/uploads/2012/08/1.jpg" alt="")
              h3 Remove product
          div(class="cartContent")
            h1 Lorem ipsum Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta, numquam quis perspiciatis ea ad omnis provident laborum dolore in atque.
          footer(class="cartContent")
            span(class="qt-minus") -
            span(class="qt") 2
            span(class="qt-plus") +
            h2(class="full-price") 29.98€
            h2(class="price") 14.99€
    div(id="site-footer")
      div(class="container cartClearfix")

        div(class="float-left")
          h2(class="subtotal") Subtotal: 
            span 163.96 €

        div(class="float-right")
          h1(class="total") Total: 
            span 177.16€
          a(class="checkOutBtn") Checkout