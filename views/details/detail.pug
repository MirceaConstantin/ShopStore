include ../layouts/layout.pug

block details
  <!--DACA E TIMP BACKGROUD IMAGE CU POSTERUL DE LA JOC -->
  .container
    div(id="notice" style="position: fixed; right: 0; z-index: 9999;")
    div(class="media row mt-1")
      div(class="h-100 col-12 pl-0 pr-0")
        h4(class="mt-0") 
          strong #{product.title}
            <!-- /.col-lg-8 -->
          div(class="float-right ")
            span(class="badge badge-info") #{product.price} $
        each genre in product.genre
          span(class="badge mr-1 badge-success") #{genre}
      div(class="col-12 media-body mt-0 pl-0 pr-0 align-bottom h-100 w-100 clearfix ")
        p(class="text-justify") #{product.description}
        a(class="btn btn-success float-right" id="addToCartDetails" onclick=`addToCart("${product._id}", "${product.title}", "${product.imagePoster}", "${product.price}")`) Add to cart
        input(id="qty" type="number" class="float-right mr-1 form-control" value=1 aria-describedby="button-addon2")
        each platform in product.platform
          span(class="badge mr-1 badge-info") #{platform}
    <!-- Video and Details -->
    div(class="media row pt-1")
      div(class="h-100 w-50")
        div(class="embed-responsive rounded embed-responsive-16by9")
          iframe(class="embed-responsive-item" allowfullscreen src= product.trailerGame)
      div(class="media-body m-0 pl-1")
        div(class="h-100")
          <!-- Carousel -->
          div(id="demo" class="carousel slide mb-1 pt-0 carousel-fade" data-ride="carousel")
            ul(class="carousel-indicators")
              each image, i in product.imagesSlider
                unless i
                  li(class="active" data-target="#demo" data-slide-to=i)
                else
                  li(data-target="#demo" data-slide-to=i)
            div(class="carousel-inner rounded")
              each image, index in product.imagesSlider
                unless index
                  div(class="carousel-item active")
                    img(src=image class="img-fluid d-block rounded mw-100" alt=product.title)
                else
                  div(class="carousel-item")
                    img(src=image class="img-fluid d-block rounded mw-100" alt=product.title)
            a(class="carousel-control-prev" href="#demo" data-slide="prev")
              span(class="carousel-control-prev-icon")
            a(class="carousel-control-next" href="#demo" data-slide="next")
              span(class="carousel-control-next-icon")